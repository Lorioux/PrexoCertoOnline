<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storeSingleCategory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    tools:showIn="@layout/layout_store_categories_recycler">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/storeProductsCategorizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/productsCategoryHeader"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="Category header"
                android:textSize="18sp"
                android:typeface="serif" />

            <ImageView
                android:id="@+id/moreInThisCategoryArrow"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="0.2"
                android:background="@color/cardview_light_background"
                android:paddingTop="16dp"
                android:paddingEnd="8dp"
                android:paddingBottom="16dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_arrow_forward_gray_24dp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/singleCategoryProductsRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:listitem="@layout/layout_product_mini_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>