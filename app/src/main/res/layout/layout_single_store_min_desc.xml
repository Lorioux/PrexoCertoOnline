<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <online.merkatos.prexocertoonline.model_views.CustomImageView
        android:id="@+id/single_StoreLogo"
        android:layout_width="120dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/single_StoreName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:text="Store name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/single_StoreLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_Store_TagLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Tag line"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/single_StoreName"
        app:layout_constraintStart_toStartOf="@+id/single_StoreName"
        app:layout_constraintTop_toBottomOf="@+id/single_StoreName" />

    <ImageView
        android:id="@+id/single_StoreHeartFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/singe_StoreCaller"
        app:layout_constraintTop_toBottomOf="@+id/single_Store_TagLine"
        app:srcCompat="@drawable/ic_heart_outline_24px" />

    <TextView
        android:id="@+id/single_StoreFavorites"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="999+"
        app:layout_constraintBottom_toBottomOf="@+id/single_StoreHeartFavorite"
        app:layout_constraintStart_toEndOf="@+id/single_StoreHeartFavorite"
        app:layout_constraintTop_toTopOf="@+id/single_StoreHeartFavorite" />

    <TextView
        android:id="@+id/singe_StoreCaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="More"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/single_StoreName"
        app:layout_constraintTop_toBottomOf="@+id/single_Store_TagLine" />
</androidx.constraintlayout.widget.ConstraintLayout>